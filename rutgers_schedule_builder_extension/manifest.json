{
    "manifest_version": 3,
    "name": "Better Rutgers Schedule Builder",
    "description": "Reworks Rutger's Course Schedule Planner to be more user-friendly.",
    "version": "1.0",
    "permissions": ["activeTab", "scripting", "tabs"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {},
    "content_scripts": [
        {
            "js": ["scripts/utils.js", "scripts/schedule.js", "scripts/global.js", "scripts/content.js"],
            "css": ["scripts/schedule_builder.css"],
            "matches": ["https://sims.rutgers.edu/csp/builder.htm*"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["templates.html"],
            "matches": ["<all_urls>"]
        }
    ]
}
